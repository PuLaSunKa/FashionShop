@using FashionShop.ViewModels.Common;
@model PagedResult<FashionShop.ViewModels.Catalog.Posts.PostVm>

@{
    ViewData["Title"] = "Bài viết";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--breadcrumbs area start-->
<div class="breadcrumbs_area other_bread">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumb_content">
                    <ul>
                        <li><a href="@Url.Action("Index", "Home")">Trang Chủ</a></li>
                        <li>/</li>
                        <li>Bài Viết</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!--breadcrumbs area end-->
<!--blog body area start-->
<div class="blog_area blog_page blog_reverse">
    <div class="container">
        <div class="row">
            
            <div class="col-lg-12 col-md-12">
                <!--blog grid area start-->
                <div class="blog_grid_area">

                    @foreach (var item in Model.Items)
                    {
                        <div class="blog_grid">
                            <div class="blog_thumb">
                                <a href="@Url.Action("Details", "Post", new{ id= item.Id})"><img src="~/images/slide/slider2.jpg" alt="@item.Title"></a>
                            </div>
                            <div class="blog_content">
                                <div class="post_date">
                                    <span class="day">@item.DateCreate.Day</span>
                                    <span class="month">/ Tháng @item.DateCreate.Month</span>
                                </div>
                                <h3 class="post_title"><a href="@Url.Action("ChiTietBaiViet", "Website")">@item.Title</a></h3>
                                <p class="post_desc"> @Html.Raw(item.Description)</p>
                                <a class="read_more" href="@Url.Action("Details", "Post", new{ id= item.Id})">Chi Tiết</a>
                                <div class="post_meta">
                                    <span>Đăng bởi </span>
                                    <span><a href="#">@item.Author</a></span>
                                    @*<span><a href="#">/ WordPress</a></span>*@
                                </div>
                            </div>
                        </div>
                    }
                    
                </div>
                <!--blog grid area start-->
            </div>
        </div>
    </div>
</div>
<!--blog section area end-->
