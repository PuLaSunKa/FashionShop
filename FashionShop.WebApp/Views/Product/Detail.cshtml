                </div>
            </div>
            <div class="col-lg-7 col-md-7">
                <div class="product_d_right">
                    <form action="#">

                        <h1>@Model.Product.Name</h1>
                        <div class="product_price">
                            @if(@Model.Product.Price >= @Model.Product.OriginalPrice)
                            {
                                <span class="current_price">@String.Format("{0:0,0}", @Model.Product.Price) đ</span>
                            }
                            else
                            {
                                <span class="current_price">@String.Format("{0:0,0}", @Model.Product.Price) đ - </span>
                                <span class="old_price" style="text-decoration: line-through;">@String.Format("{0:0,0}", @Model.Product.OriginalPrice) đ</span>
                            }
                            
                        </div>
                        <div class="product_desc">
                            <p>@Model.Product.Description</p>
                        </div>

