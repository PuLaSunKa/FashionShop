@model FashionShop.ViewModels.System.Users.UserVm

@{
    ViewData["Title"] = "Thông tin tài khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h1 class="mt-4">Thông tin tài khoản</h1>
